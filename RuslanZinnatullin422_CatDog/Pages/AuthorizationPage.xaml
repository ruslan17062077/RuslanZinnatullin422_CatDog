<Window x:Class="RuslanZinnatullin422_CatDog.Pages.AuthorizationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuslanZinnatullin422_CatDog.Pages"
        mc:Ignorable="d"
        Title="AuthorizationPage" Height="450" Width="800">

        <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10,10,0,0">Имя</TextBlock>
                <TextBox Name="LoginTbl" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10,10,0,0">Пароль</TextBlock>
                <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"/>
            </StackPanel>

            
            <Button Content="Login" HorizontalAlignment="Right" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
   
</Window>
