<Page x:Class="RuslanZinnatullin422_CatDog.Pages.AddPet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RuslanZinnatullin422_CatDog.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPet">

    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ComboBox для выбора имени питомца -->
            <ComboBox Name="PetNameComboBox" Grid.Row="0" Grid.Column="0" Width="120"
              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,10,10">
                <ComboBoxItem Content="Ра"/>
                <ComboBoxItem Content="Нуби"/>
            </ComboBox>

            <!-- Контейнер для изображения и описания -->
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,10">
                <Image Name="PetImage" Width="100" Height="100"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Описание" Margin="0,0,0,5"/>
                    <TextBox Name="DescriptionTextBox" Width="300" Height="100"
                     TextWrapping="Wrap" VerticalAlignment="Top"/>
                </StackPanel>
            </StackPanel>

            <!-- Кнопка "Фото" -->
            <Button Content="Фото" Grid.Row="3" Grid.Column="0"
            HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Click="BrowseButton_Click" Margin="0,10,0,0"/>

            <!-- Кнопка "Добавить" -->
            <Button Content="Добавить" Grid.Row="3" Grid.Column="2"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Click="AddButton_Click" Margin="10,10,0,0"/>
        </Grid>

    </Grid>
</Page>
